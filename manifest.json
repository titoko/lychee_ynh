{
    "name": "Lychee",
    "id": "lychee",
    "description": {
        "en": "Self-hosted photo-management done right",
        "fr": "Gestionnaire de photos autoheberg√©"
    },
    "developer": {
        "name": "titoko",
        "email": "titoko@titoko.fr",
        "url": "http://dev.yunohost.org"
    },
    "multi_instance": "true",
    "arguments": {
        "install" : [
        {
            "name": "domain",
            "ask": {
                "en": "Choose a domain for Lychee"
            },
            "example": "domain.org"
        },
        {
            "name": "path",
            "ask": {
                "en": "Choose a path for lychee"
            },
            "example": "/lychee",
            "default": "/lychee"
        },
        {
            "name": "admin_user",
            "ask": {
                "en": "Choose login of  admin user"
            },
            "example": "johndoe",
            "default": "admin"
        },
        {
            "name": "admin_pwd",
            "type": "password",
            "ask": {
                "en": "Choose password for admin user"
            },
            "example": "My super password!"
        }
        ]
    }
}
